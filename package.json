    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.1",
    "jest": "^29.0.1",
    "lint-staged": "^13.0.4",
    "prettier": "^2.6.2",
    "ts-jest": "^29.0.1",
    "ts-loader": "^9.5.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
